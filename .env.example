# Frontend Environment Variables (Vite)
# Copy this file to .env and fill in your actual values

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_API_URL=http://localhost:5000

# Sentry Configuration (Error Monitoring)
# Create free account at https://sentry.io and get your DSN from project settings
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
VITE_SENTRY_ENVIRONMENT=development
# RECOMMENDED: Enable performance monitoring in production
# Sample rate 0.5 (50%) provides good visibility without excessive quota
VITE_SENTRY_ENABLE_TRACING=true
VITE_SENTRY_TRACES_SAMPLE_RATE=0.5

# Google Analytics 4 (Phase 3A - Analytics & SEO)
# Create GA4 property at https://analytics.google.com and get Measurement ID
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# Optional: Enable GA4 in development mode for testing
VITE_GA_DEBUG=false

# SEO Configuration (Phase 3A)
# Production site URL (used for canonical URLs and Open Graph)
VITE_SITE_URL=https://pattamap.com

# ===========================================
# Feature Flags (default: all enabled)
# ===========================================
# Set to 'false' to disable a feature

# VIP System (badges, priority placement, subscriptions)
# Disable this to launch without monetization initially
VITE_FEATURE_VIP_SYSTEM=false

# Payment processing (cash verification, future: PromptPay)
VITE_FEATURE_PAYMENTS=false

# Gamification (XP, levels, badges, missions)
VITE_FEATURE_GAMIFICATION=true

# Push notifications
VITE_FEATURE_PUSH_NOTIFICATIONS=true

# Security Notes:
# - Never commit .env files to version control
# - ANON_KEY is safe for frontend use
# - Never expose SERVICE_KEY in frontend
# - Sentry DSN is safe for frontend (public key)
# - GA Measurement ID is safe for frontend (public key)
